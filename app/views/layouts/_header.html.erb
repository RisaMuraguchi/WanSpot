<header class="sticky-top">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid px-4 px-lg-5">
      <%= link_to image_tag('logo.png'), root_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarColor03">

        <!--ユーザーがログインしているとき-->
        <% if user_signed_in? %>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
              <%= link_to 'Home', user_path(current_user), class: 'nav-link active' %>
          </li>
          <li class="nav-item">
            <%= link_to '新規投稿', new_post_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to '一覧', posts_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'About', '#', class: 'nav-link' %>
          </li>
        </ul>

        <!--管理者がログインしているとき-->
        <% elsif admin_signed_in? %>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
              <%= link_to 'Home', root_path, class: 'nav-link active' %>
          </li>
          <li class="nav-item">
            <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'ログイン', new_user_session_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'ゲストログイン', users_guest_sign_in_path,  class: 'nav-link', method: :post %>
          </li>
        </ul>

        <% else %>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
              <%= link_to 'Home', root_path, class: 'nav-link active' %>
          </li>
          <li class="nav-item">
            <%= link_to '新規登録', new_user_registration_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'ログイン', new_user_session_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'ゲストログイン', users_guest_sign_in_path,  class: 'nav-link', method: :post %>
          </li>
        </ul>
        <% end %>

        <!--キーワード検索フォーム-->
        <div class="form-group">
          <%= form_with url: search_posts_path, local: true, method: :get, class: "form-inline" do |f| %>
            <%= f.text_field :keyword, class: "form-control me-sm-3", placeholder: "キーワード検索" %>
            <%= f.submit "Search", class: "btn btn-info btn-sm" %>
          <% end %>
        </div>

      </div>
    </div>
  </nav>
</header>