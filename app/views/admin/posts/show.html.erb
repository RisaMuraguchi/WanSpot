<div class="container mt-5 mb-5">
  <div class='row mx-auto' style="display: flex;flex-wrap: wrap; width: 100%;">
    <% @posts.each do |post| %>
      <div class="col-10 col-md-3">
        <div class="card mt-4 shadow-lg" style="width: 100%; height: 300px; overflow-y: auto;">
            <%= image_tag post.get_image, class:"card-img-top" %>
          <div class="card-body" style="max-height: 300px;">
            <p class="card-text">caption：<%= post.caption %></p>
            <p class="card-title">スポット：<%= post.address %></p>
            <p class="card-text">ユーザー：<%= post.user.name %></p>
            <p class="card-text"><%= link_to "削除", admin_post_path(post), method: :delete, data: { confirm: "本当に削除しますか？" } %></p>
          </div>
      </div>
    </div>
    <% end %>
  </div>
</div>