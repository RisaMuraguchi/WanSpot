<!--フォロワー一覧レイアウト1-->
<div class="container">
  <h1 class="text-center mb-5">Follower Users</h1>
  <% if @users.exists? %>
    <% @users.each do |user| %>
      <div class="card mb-3">
        <div class="card-body">
          <div class="row">
            <div class="col-md-2">
              <%= image_tag user.get_profile_image(100, 100), class: "rounded-circle img-fluid mx-auto d-block mb-3" %>
            </div>
            <div class="col-md-7">
              <h5 class="card-title"><%= user.name %></h5>
              <p class="card-text">フォロー数: <%= user.followings.count %></p>
              <p class="card-text">フォロワー数: <%= user.followers.count %></p>
            </div>
            <div class="col-md-3">
              <% if current_user != user %>
                <% if current_user.following?(user) %>
                  <%= link_to "フォロー解除", user_relationships_path(user), method: :delete, class: "btn btn-info btn-block" %>
                <% else %>
                  <%= link_to "フォローする", user_relationships_path(user), method: :post, class: "btn btn-primary btn-block" %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-center">ユーザーはいません</p>
  <% end %>
</div>

<!--フォロワー一覧レイアウト2-->
<div class="container my-5">
  <h2 class="text-center mb-4">Followers</h2>
  <% if @users.exists? %>
    <table class='table'>
      <thead>
        <tr>
          <th>Image</th>
          <th>Name</th>
          <th colspan="2">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(50, 50), class: "rounded-circle" %></td>
            <td><%= user.name %></td>
            <td>
              <% if current_user != user%>
                <% if current_user.following?(user) %>
                  <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete, class: "btn btn-info btn-sm" %>
                <% else %>
                  <%= link_to "Follow", user_relationships_path(user.id), method: :post, class: "btn btn-success btn-sm" %>
                <% end %>
              <% end %>
            </td>
            <td><%= link_to 'Show', user, class: "user_#{user.id} btn btn-primary btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-center">No users found</p>
  <% end %>
</div>

