<div class="card-list-container py-5" style="display: flex; flex-wrap: wrap;">
  <%#= render 'index' %>
  <% @posts.each do |post| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg" style="flex-basis: 50%;">
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.get_image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <!--タイトル-->
          <!--<p class="card-title"></p>-->
          <p class="card-text">caption：<%= post.caption %></p>
          <span><i class="fas fa-user"></i>  <%= post.user.name %> ｜ </span>
          <span><%= link_to "#{post.comments.count} コメント", post_path(post.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <!--ページネーション-->
  <%#= paginate posts %>
</div>

