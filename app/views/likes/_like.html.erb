<% if @post.liked_by?(current_user) %>
  <span>
    <%= link_to post_likes_path(@post), method: :delete, remote: true do %>
      <i class="fas fa-heart" aria-hidden="true" style="color: #e61e50;"></i> <%= @post.likes.count %>
      <% end %>
  </span>
  <% else %>
  <span>
    <%= link_to post_likes_path(@post), method: :post, remote: true do %>
      <i class="far fa-heart" aria-hidden="true"></i> <%= @post.likes.count %>
    <% end %>
  </span>
<% end %>
