<div class="card-list-container py-5" style="display: flex; justify-content: space-between; padding-left: 15px; padding-right: 15px;">
  <%#= render 'index' %>
  <% @posts.each do |post| %>
  <div class="card  mt-4 shadow-lg" style="flex-basis: 48%; margin: 0 10px;">
    <%= link_to post_path(post.id) do %>
      <%= image_tag post.get_image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post.user.get_profile_image(50,50), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-text">caption：<%= post.caption %></p>
          <span> <%= post.user.name %> ｜ </span>
          <span><%= link_to "#{post.comments.count} コメント", post_path(post.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <!--ページネーション-->
  <%#= paginate posts %>
</div>

