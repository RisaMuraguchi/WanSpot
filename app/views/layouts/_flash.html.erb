 <!--フラッシュメッセージ-->
<div class="alert alert-primary alert-dismissible fade show mb-0" role="alert" <% unless flash[:notice].present? || flash[:alert].present? %>style="display: none;"<% end %>>
    <span class="text-center"><h5><strong><%= flash[:notice] %></strong></h5></span>
    <span class="text-center"><h5><strong><%= flash[:alert] %></strong></h5></span>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>