<div class="container mt-5 mb-5">
  <h2 class='title'>いいね一覧</h2>
  <div class='row mx-auto' style="display: flex;flex-wrap: wrap; width: 100%;">
    <% if @like_posts.present? %>
      <% @like_posts.each do |post|%>
        <div class="col-10 col-md-3">
          <div class="card mt-4 shadow-lg" style="width: 100%; height: 300px; overflow-y: auto;">
            <%= link_to post_path(post.id) do %>
                <%= image_tag post.get_image, class:"card-img-top" %>
            <% end %>
            <div class="card-body">
              <%= image_tag post.user.get_profile_image(50,50), class:"mt-3 rounded-circle" %>
              <p class="card-text">caption：<%= post.caption %></p>
              <span> <%= post.user.name %> ｜ </span>
              <span><%= link_to "#{post.comments.count} コメント", post_path(post.id), class:"text-dark" %></span>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p><%= @message %></p>
    <% end %>
  </div>
</div>