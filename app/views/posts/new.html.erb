<%= stylesheet_link_tag 'style' %>
<div class="container mt-5 mb-5">
  <div class="row no-gutters justify-content-center">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h2 class="bg-light py-4 mb-0">投稿</h2>
      <div class="form-body p-4">
        <%= form_with model: @post do |f| %>
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image, class: "form-control-file image", accept: 'image/*' %>
          </div>
          <!--画像プレビュー表示-->
          <div id="preview-image"></div>

          <div class="form-group">
            <%= f.label :caption %>
            <%= f.text_area :caption, class: "form-control caption" %>
            <div class="form-helper"></div>
          </div>

          <div class="form-group">
            <%= f.submit 'Create Post', class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
