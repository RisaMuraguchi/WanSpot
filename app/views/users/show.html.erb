<div class="profile-container w-75 d-flex mx-auto justify-content-around align-items-center border-bottom py-5">
   <%= image_tag @user.get_profile_image(100,100), class:"rounded-circle";  %>
  <h5 class="profile-name display-4"><%= @user.name %></h5>
  <% if @user.id == current_user.id %>
    <div class="mt-auto">
    <p><%= link_to "プロフィール編集", edit_user_path(@user), class:"text-dark" %></p>
    </div>
  <% end %>
  
    <% if current_user != @user %>
     <% if current_user.following?(@user) %>
      <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-info" %>
     <% else %>
      <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
     <% end %>
  <% end %>
</div>

<table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>profile</th>
            <th><%= @user.profile %></th>
          </tr>
          <tr>
           <th>follows</th>
           <th><%= link_to @user.followings.count, user_followings_path(@user) %></th>
          </tr>
          <tr>
           <th>followers</th>
           <th><%= link_to @user.followers.count, user_followers_path(@user) %></th>
          </tr>
        </tbody>
  </table>

