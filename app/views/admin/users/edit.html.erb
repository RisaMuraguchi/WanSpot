<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="bg-light py-4 mb-0">プロフィール編集</h5>
      <div class="form-body p-4">
        <%= form_with model: @user, local: true do |f| %>

          <div class="form-group">
            <%= f.label :name, "ニックネーム" %>
            <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName", placeholder:"ニックネーム"%>
          </div>

          <div class="form-group">
            <%= f.label :profile, "プロフィール文" %>
            <%= f.text_area :profile, class:"form-control", placeholder:"自己紹介を入力してください", rows:5 %>
          </div>

          <div class="form-group">
            <%= f.label :profile_image, "プロフィール画像" %>
            <%= f.file_field :profile_image, class: "form-control-file image", accept: 'image/*' %>
          </div>

          <div class="form-group row">
            <%= f.label "会員ステータス" %>
            <div class="col-7">
              <%= f.radio_button :user_status, true %>
              <%= f.label :user_status, "有効" %>
            </div>
            <div class="col-3">
              <%= f.radio_button :user_status, false %>
              <%= f.label :user_status, "退会" %>
            </div>
          </div>

          <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-info mt-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
