<div class="container mt-5 mb-5">
  <div class="row mt-3">
    <div class="col-sm-8 px-sm-0 offset-sm-2 text-center mb-3">
      <h2><i class="fas fa-paw fa-xs"></i> LOGIN <i class="fas fa-paw fa-xs"></i></h2>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-9 col-md-4 px-sm-0 offset-sm-3">
      会員の方はこちらからログイン
    </div>
  </div>
  <!--<%#= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>-->
  <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
    <div class="row">
        <div class="col-5 col-md-2 px-sm-0 offset-sm-3 my-3 form-group">
          <%= f.label "メールアドレス" %>
        </div>
        <div class="col-5 col-md-3 px-sm-0 my-3">
          <%= f.email_field :email, :size => "30", autofocus: true, placeholder: "sample@example.com", class: "form-control email" %>
        </div>
      </div>
      <div class="row">
        <div class="col-5 col-md-2 px-sm-0 offset-sm-3 my-3 form-group">
          <%= f.label "パスワード" %>
        </div>
        <div class="col-5 col-md-3 px-sm-0">
          <%= f.password_field :password, :size => "30", autofocus: true, class: "form-control password" %>
        </div>
      </div>
      <div class="row">
        <div class="col-1 col-md-1 px-sm-0 offset-sm-1 mx-auto">
          <%= f.submit "ログイン", class:"btn btn-primary px-4 mt-3 mb-5" %>
        </div>
      </div>
  <% end %>
</div>

<%#= render "public/shared/links" %>
