
  <!--// モーダルを取得-->
  var modal = document.getElementById('modal');
  <!--// マスクを取得-->
  var mask = document.getElementById('mask');

  <!--// モーダルの中身をshowビューに置き換える-->
  modal.innerHTML = '<%= escape_javascript(render partial: 'posts/show', locals: { post: @post, comments: @comments, user: @user, comment: @comment }) %>';

  <!--// hiddenクラスを削除してモーダルとマスクを表示-->
  modal.classList.remove('hidden');
  mask.classList.remove('hidden');

  <!--// スクロールバーを追加-->
  var modalContent = document.querySelector('#modal');
  modalContent.style.maxHeight = '700px';
  modalContent.style.overflowY = 'auto';


<!--モーダルの外側（マスク）をクリックするとhiddenクラスが書き込まれ、モーダルとマスクが再び非表示となります。-->
  mask.addEventListener('click', () => {
    modal.classList.add('hidden');
    mask.classList.add('hidden');
    });
